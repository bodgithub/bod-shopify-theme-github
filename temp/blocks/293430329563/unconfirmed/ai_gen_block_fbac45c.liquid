<script>
  (function() {
    class ProductVariantSelector{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentVariantId = '46444646269147';
        this.currentPurchaseType = 'subscribe';
      }

      connectedCallback() {
        this.tabs = this.querySelectorAll('.ai-featured-product__tab-{{ ai_gen_id }}');
        this.tabContents = this.querySelectorAll('.ai-featured-product__tab-content-{{ ai_gen_id }}');
        this.optionCards = this.querySelectorAll('.ai-featured-product__option-card-{{ ai_gen_id }}');
        this.addToCartButton = this.querySelector('[data-add-to-cart]');

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', (e) => this.handleTabClick(e));
        });

        this.optionCards.forEach((card) => {
          card.addEventListener('click', (e) => this.handleOptionClick(e));
        });

        if (this.addToCartButton) {
          this.addToCartButton.addEventListener('click', () => this.handleAddToCart());
        }
      }

      handleTabClick(e) {
        const clickedTab = e.currentTarget;
        const tabName = clickedTab.getAttribute('data-tab');
        const variantId = clickedTab.getAttribute('data-variant-id');

        this.tabs.forEach((tab) => tab.classList.remove('active'));
        clickedTab.classList.add('active');

        this.tabContents.forEach((content) => {
          content.classList.remove('active');
          if (content.getAttribute('data-content') === tabName) {
            content.classList.add('active');
          }
        });

        this.currentVariantId = variantId;

        const activeContent = this.querySelector('.ai-featured-product__tab-content-{{ ai_gen_id }}.active');
        const selectedOption = activeContent.querySelector('.ai-featured-product__option-card-{{ ai_gen_id }}.selected');
        if (selectedOption) {
          this.currentPurchaseType = selectedOption.getAttribute('data-option');
        }
      }

      handleOptionClick(e) {
        const clickedCard = e.currentTarget;
        const parentContent = clickedCard.closest('.ai-featured-product__tab-content-{{ ai_gen_id }}');
        const allCardsInTab = parentContent.querySelectorAll('.ai-featured-product__option-card-{{ ai_gen_id }}');

        allCardsInTab.forEach((card) => card.classList.remove('selected'));
        clickedCard.classList.add('selected');

        this.currentPurchaseType = clickedCard.getAttribute('data-option');
        this.currentVariantId = clickedCard.getAttribute('data-variant-id');
      }

      async handleAddToCart() {
        if (!this.addToCartButton) return;

        this.addToCartButton.disabled = true;
        this.addToCartButton.textContent = 'Adding...';

        try {
          const formData = {
            items: [{
              id: this.currentVariantId,
              quantity: 1
            }]
          };

          if (this.currentPurchaseType === 'subscribe') {
            formData.items[0].selling_plan = await this.getRechargeSellingPlan(this.currentVariantId);
          }

          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData)
          });

          if (response.ok) {
            window.location.href = '/cart';
          } else {
            throw new Error('Failed to add to cart');
          }
        } catch (error) {
          console.error('Error adding to cart:', error);
          alert('There was an error adding the product to your cart. Please try again.');
        } finally {
          this.addToCartButton.disabled = false;
          this.addToCartButton.textContent = '{{ block.settings.button_text }}';
        }
      }

      async getRechargeSellingPlan(variantId) {
        try {
          const response = await fetch(`/products/${window.location.pathname.split('/').pop()}.js`);
          const product = await response.json();
          
          const variant = product.variants.find(v => v.id.toString() === variantId);
          if (variant && variant.selling_plan_allocations && variant.selling_plan_allocations.length > 0) {
            return variant.selling_plan_allocations[0].selling_plan_id;
          }
        } catch (error) {
          console.error('Error fetching selling plan:', error);
        }
        return null;
      }
    }

    customElements.define('product-variant-selector-{{ ai_gen_id }}', ProductVariantSelector{{ ai_gen_id }});
  })();
</script>

