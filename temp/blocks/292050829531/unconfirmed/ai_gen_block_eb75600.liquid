{% doc %}
  @prompt
    Paralax background with an H1 headline in top right with benefit list including icon which can be updated using a photo upload, and benefit text which will be added via a meta field, and a blue line between each benefit added. Include a subheading to go above the headline in a roundel.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-parallax-benefits-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: 600px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 60px 40px;
  }

  .ai-parallax-bg-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-parallax-bg-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    will-change: transform;
  }

  .ai-parallax-bg-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-parallax-bg-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-parallax-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity }};
    z-index: 2;
  }

  .ai-parallax-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-parallax-roundel-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.roundel_bg_color }};
    color: {{ block.settings.roundel_text_color }};
    border-radius: 50%;
    width: {{ block.settings.roundel_size }}px;
    height: {{ block.settings.roundel_size }}px;
    font-size: {{ block.settings.roundel_font_size }}px;
    font-weight: 600;
    text-align: center;
    padding: 10px;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .ai-parallax-headline-{{ ai_gen_id }} {
    color: {{ block.settings.headline_color }};
    font-size: {{ block.settings.headline_size }}px;
    margin: 0 0 30px 0;
    line-height: 1.2;
  }

  .ai-parallax-benefits-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .ai-parallax-benefit-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: {{ block.settings.benefit_padding }}px 0;
    border-bottom: {{ block.settings.divider_width }}px solid {{ block.settings.divider_color }};
  }

  .ai-parallax-benefit-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-parallax-benefit-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    border-radius: {{ block.settings.icon_border_radius }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_bg_color }};
  }

  .ai-parallax-benefit-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-parallax-benefit-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-parallax-benefit-icon-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-parallax-benefit-text-{{ ai_gen_id }} {
    flex-grow: 1;
    color: {{ block.settings.benefit_text_color }};
    font-size: {{ block.settings.benefit_text_size }}px;
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-parallax-benefits-{{ ai_gen_id }} {
      min-height: 500px;
      padding: 40px 20px;
      justify-content: center;
    }

    .ai-parallax-content-{{ ai_gen_id }} {
      max-width: 100%;
    }

    .ai-parallax-headline-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.headline_size }}px * 0.7);
    }

    .ai-parallax-roundel-{{ ai_gen_id }} {
      width: calc({{ block.settings.roundel_size }}px * 0.8);
      height: calc({{ block.settings.roundel_size }}px * 0.8);
      font-size: calc({{ block.settings.roundel_font_size }}px * 0.8);
    }

    .ai-parallax-benefit-icon-{{ ai_gen_id }} {
      width: calc({{ block.settings.icon_size }}px * 0.8);
      height: calc({{ block.settings.icon_size }}px * 0.8);
    }

    .ai-parallax-benefit-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.benefit_text_size }}px * 0.9);
    }
  }
{% endstyle %}

<parallax-benefits-{{ ai_gen_id }}
  class="ai-parallax-benefits-{{ ai_gen_id }}"
  data-parallax-speed="{{ block.settings.parallax_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-parallax-bg-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
        class="ai-parallax-bg-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-parallax-bg-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-parallax-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-parallax-content-{{ ai_gen_id }}">
    {% if block.settings.subheading != blank %}
      <div class="ai-parallax-roundel-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    {% if block.settings.headline != blank %}
      <h1 class="ai-parallax-headline-{{ ai_gen_id }}">
        {{ block.settings.headline }}
      </h1>
    {% endif %}

    <div class="ai-parallax-benefits-list-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign benefit_enabled_key = 'benefit_' | append: i | append: '_enabled'
          assign benefit_icon_key = 'benefit_' | append: i | append: '_icon'
          assign benefit_text_key = 'benefit_' | append: i | append: '_text'

          assign benefit_enabled = block.settings[benefit_enabled_key]
          assign benefit_icon = block.settings[benefit_icon_key]
          assign benefit_text = block.settings[benefit_text_key]
        %}

        {% if benefit_enabled %}
          <div class="ai-parallax-benefit-{{ ai_gen_id }}">
            <div class="ai-parallax-benefit-icon-{{ ai_gen_id }}">
              {% if benefit_icon %}
                <img
                  src="{{ benefit_icon | image_url: width: 200 }}"
                  alt="{{ benefit_icon.alt | escape }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                <div class="ai-parallax-benefit-icon-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-parallax-benefit-text-{{ ai_gen_id }}">
              {{ benefit_text }}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</parallax-benefits-{{ ai_gen_id }}>

<script>
  (function() {
    class ParallaxBenefits{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.parallaxSpeed = parseFloat(this.dataset.parallaxSpeed) || 0.5;
        this.bgImage = this.querySelector('.ai-parallax-bg-image-{{ ai_gen_id }}');
        this.ticking = false;
      }

      connectedCallback() {
        if (this.bgImage) {
          this.setupParallax();
        }
      }

      setupParallax() {
        window.addEventListener('scroll', () => {
          if (!this.ticking) {
            window.requestAnimationFrame(() => {
              this.updateParallax();
              this.ticking = false;
            });
            this.ticking = true;
          }
        });

        this.updateParallax();
      }

      updateParallax() {
        const rect = this.getBoundingClientRect();
        const windowHeight = window.innerHeight;

        if (rect.top < windowHeight && rect.bottom > 0) {
          const scrolled = windowHeight - rect.top;
          const rate = scrolled * this.parallaxSpeed;
          this.bgImage.style.transform = 'translate3d(0, ' + rate + 'px, 0)';
        }
      }

      disconnectedCallback() {
        window.removeEventListener('scroll', this.updateParallax);
      }
    }

    customElements.define('parallax-benefits-{{ ai_gen_id }}', ParallaxBenefits{{ ai_gen_id }});
  })();
</script>

