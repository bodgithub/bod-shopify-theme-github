{%- liquid
	if customer
  	assign profile_link = routes.account_url
	else
  	assign profile_link = routes.account_login_url
	endif
-%}
<div class="thb-secondary-area thb-header-right" style="display: flex; align-items: center;">
	<!-- Hide Quick Search -->
	<a class="thb-secondary-area-item thb-quick-search" href="{{ routes.search_url }}" style="display:none;" title="{{ 'sections.header.search' | t }}">
		{%- render 'svg-icons' with 'search' -%}
	</a>

	{%- if shop.customer_accounts_enabled -%}
		<!-- Replace Account Icon with Text -->
    	<a class="thb-secondary-area-item thb-secondary-myaccount" href="{{ profile_link | escape }}" title="{{ 'sections.header.my_account' | t }}">
      		account
      		{% comment %}
      		Icon commented for future use:
      		{%- render 'svg-icons' with 'myaccount' -%}
      		{% endcomment %}
    	</a>
  	{%- endif -%}

  	<!-- Conditionally show Cart only when an item is added -->
  	{%- if cart.item_count > 0 -%}
    	<a class="thb-secondary-area-item thb-secondary-cart" href="{{ routes.cart_url }}" id="cart-drawer-toggle">
      		cart
      		{% comment %}
      		Icon commented for future use:
      		<div class="thb-secondary-item-icon">{% render 'svg-icons' with 'cart' %}</div>
      		{% endcomment %}
    	</a>
  	{%- endif -%}

  	<!-- Add the Button to the Right -->
  	<a class="button" href="/your-button-link" role="button" title="Your Button Title">
    	<span>Call to Action</span>
  	</a>
</div>
