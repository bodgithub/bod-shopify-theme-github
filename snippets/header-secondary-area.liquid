{%- liquid
	if customer
  	assign profile_link = routes.account_url
	else
  	assign profile_link = routes.account_login_url
	endif
-%}
<div class="thb-secondary-area thb-header-right" style="display: flex; align-items: center;">
	<!-- Hide Quick Search -->
	<a class="thb-secondary-area-item thb-quick-search" href="{{ routes.search_url }}" style="display:none;" title="{{ 'sections.header.search' | t }}">
		{%- render 'svg-icons' with 'search' -%}
	</a>

	{%- if shop.customer_accounts_enabled -%}
		<!-- Replace Account Icon with Text -->
    	<a class="thb-secondary-area-item thb-secondary-myaccount" href="{{ profile_link | escape }}" title="{{ 'sections.header.my_account' | t }}">
      		account
      		{% comment %}
      		Icon commented for future use:
      		{%- render 'svg-icons' with 'myaccount' -%}
      		{% endcomment %}
    	</a>
  	{%- endif -%}

  	<!-- Conditionally show Cart only when an item is added -->
  	{%- if cart.item_count > 0 -%}
    	<a class="thb-secondary-area-item thb-secondary-cart" href="{{ routes.cart_url }}" id="cart-drawer-toggle">
      		cart
      		{% comment %}
      		Icon commented for future use:
      		<div class="thb-secondary-item-icon">{% render 'svg-icons' with 'cart' %}</div>
      		{% endcomment %}
    	</a>
  	{%- endif -%}

  		<!-- Add the Button to the Right with custom styles -->
<a class="button" href="{{ section.settings.button_url | default: '/your-button-link' }}" 
    role="button" 
    title="{{ section.settings.button_text | default: 'Get Inositol' }}"
    style="
        background-color: {{ section.settings.button_background_color | default: color_text }};
        color: {{ section.settings.button_font_color | default: color_bg }};
        border: {{ section.settings.button_border_width | default: '2px' }} solid {{ section.settings.button_border_color | default: color_text }};
    ">
  <span>{{ section.settings.button_text | default: 'Call to Action' }}</span>
</a>


    <style>
        .button:hover {
            background-color: {{ section.settings.button_hover_background_color | default: color_text | color_darken: 7 }};
        }
    </style>
</div>



