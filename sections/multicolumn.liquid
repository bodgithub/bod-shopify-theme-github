{{- 'multicolumn.css' | asset_url | stylesheet_tag -}}
{%- liquid
	assign section_heading = section.settings.heading
	assign marker_style = section.settings.marker_style
	assign section_description = section.settings.description
	assign columns_desktop = section.settings.columns_desktop
	assign heading_size = section.settings.heading_size
	assign mobile_swipe = section.settings.mobile_swipe
	assign image_ratio = section.settings.image_ratio
	assign text_alignment = section.settings.text_alignment

	assign color_heading = section.settings.color_heading
	assign marker_color = section.settings.marker_color
	assign color_text = section.settings.color_text
	assign color_links = section.settings.color_links

	assign disable_top_spacing = section.settings.disable_top_spacing
	assign disable_bottom_spacing = section.settings.disable_bottom_spacing

	case columns_desktop
		when 2
			assign columns_desktop_class = 'medium-6'
		when 3
			assign columns_desktop_class = 'medium-4'
		when 4
			assign columns_desktop_class = 'medium-3'
		when 5
			assign columns_desktop_class = 'medium-1/5 large-1/5'
	endcase
-%}
<div class="multicolumn {% if mobile_swipe %} swipe-on-mobile{% endif %} section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %} text-alignment--{{ text_alignment }}" style="background-color:{{ section.settings.bgcolor }}; --color-heading: {{ color_heading }}; --color-text: {{ color_text }}; --color-accent: {{ color_links }}; --color-accent-rgb: {{ color_links.rgb | replace: ' ' , ',' }};">
	<div class="row">
		<div class="small-12 columns">
			{% render 'section-header', section_heading: section_heading, section_description: section_description, marker_color: marker_color, marker_style: marker_style %}
			<div class="multicolumn__inner text-{{ text_alignment }}">
				<div class="row align-stretch no-padding">
					{%- for block in section.blocks -%}
  {%- case block.type -%}

    {%- when 'testimonials_row' -%}
      <div class="eli-row-wrap" {{ block.shopify_attributes }}>
        <div
          class="eli-row-grid"
          style="
            --eli-grid-cols: {{ section.settings.eli_desktop_cols | default: '45% 18% 18% 18%' }};
            --eli-grid-gap: {{ section.settings.eli_gap | default: '28px' }};
            --eli-card-padding: {{ section.settings.eli_card_padding | default: '22px' }};
            --eli-card-radius: {{ section.settings.eli_card_radius | default: '12px' }};
            --eli-card-border: {{ section.settings.eli_card_border | default: '1px solid rgba(0,0,0,.08)' }};
            --eli-card-bg: {{ section.settings.eli_card_bg | default: '#fff' }};
          "
        >
          <!-- Left title area -->
          <div class="eli-left">
            {%- if block.settings.left_kicker != blank -%}
              <div class="eli-kicker">{{ block.settings.left_kicker }}</div>
            {%- endif -%}
            {%- if block.settings.left_heading != blank -%}
              <h2 class="eli-heading">{{ block.settings.left_heading }}</h2>
            {%- endif -%}
            {%- if block.settings.left_subheading != blank -%}
              <div class="eli-subheading">{{ block.settings.left_subheading }}</div>
            {%- endif -%}
          </div>

          <!-- Card 1 -->
          <article class="eli-card">
            {%- if block.settings.card1_title != blank -%}
              <h3 class="eli-card-title">{{ block.settings.card1_title }}</h3>
            {%- endif -%}
            {%- if block.settings.card1_body != blank -%}
              <div class="eli-card-body">{{ block.settings.card1_body }}</div>
            {%- endif -%}
            {%- if block.settings.card1_author != blank -%}
              <div class="eli-card-author">
                {{ block.settings.card1_author }}
                {%- if block.settings.show_check_1 -%}
                  <span class="eli-verified" aria-hidden="true">✔</span>
                {%- endif -%}
              </div>
            {%- endif -%}
          </article>

          <!-- Card 2 -->
          <article class="eli-card">
            {%- if block.settings.card2_title != blank -%}
              <h3 class="eli-card-title">{{ block.settings.card2_title }}</h3>
            {%- endif -%}
            {%- if block.settings.card2_body != blank -%}
              <div class="eli-card-body">{{ block.settings.card2_body }}</div>
            {%- endif -%}
            {%- if block.settings.card2_author != blank -%}
              <div class="eli-card-author">
                {{ block.settings.card2_author }}
                {%- if block.settings.show_check_2 -%}
                  <span class="eli-verified" aria-hidden="true">✔</span>
                {%- endif -%}
              </div>
            {%- endif -%}
          </article>

          <!-- Card 3 -->
          <article class="eli-card">
            {%- if block.settings.card3_title != blank -%}
              <h3 class="eli-card-title">{{ block.settings.card3_title }}</h3>
            {%- endif -%}
            {%- if block.settings.card3_body != blank -%}
              <div class="eli-card-body">{{ block.settings.card3_body }}</div>
            {%- endif -%}
            {%- if block.settings.card3_author != blank -%}
              <div class="eli-card-author">
                {{ block.settings.card3_author }}
                {%- if block.settings.show_check_3 -%}
                  <span class="eli-verified" aria-hidden="true">✔</span>
                {%- endif -%}
              </div>
            {%- endif -%}
          </article>
        </div>
      </div>

    {%- else -%}
      <!-- keep existing multicolumn column behavior -->
      <div class="multicolumn__column small-12 {{ columns_desktop_class }} columns" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {%- liquid
            assign ratio = 1
            assign max_width = block.settings.image.width | divided_by: 2 | append: 'px'
            assign image_link = block.settings.image_link
            if image_ratio == 'adapt'
              assign ratio = block.settings.image.aspect_ratio
            endif
            if block.settings.image_full_width
              assign max_width = '100%'
            endif
          -%}
          <figure class="multicolumn__image" style="width: {{ max_width }};">
            <div class="multicolumn__image--inner aspect-ratio aspect-ratio--{{ image_ratio }}" style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;">
              {% if image_link != blank %}<a href="{{ image_link }}">{% endif %}
              {%- render 'responsive-image', image: block.settings.image, sizes: '407x0,814x0', retina: true -%}
              {% if image_link != blank %}</a>{% endif %}
            </div>
          </figure>
        {% endif %}
        {% if block.settings.title != blank %}
          <h4 class="{{ heading_size }}">{{ block.settings.title }}</h4>
        {% endif %}
        {% if block.settings.text != blank %}
          <div class="rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
        {% endif %}
        {% if block.settings.link_label != blank %}
          {% render 'text-button', url: block.settings.link, title: block.settings.link_label %}
        {% endif %}
      </div>
    {%- endcase -%}
{%- endfor -%}

				</div>
			</div>

		</div>
	</div>
</div>
