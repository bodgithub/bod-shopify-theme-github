<div class="row">
  <div class="small-12 columns">
    <div class="carousel-container" style="padding: {{ section.settings.padding }};">
      <div class="carousel">
        {% for block in section.blocks %}
        <div class="carousel-item" style="width: {{ section.settings.item_width }}px; height: {{ section.settings.item_height }}px; padding: {{ section.settings.item_padding }};">
          <div class="carousel-image" style="background-image: url('{{ block.settings.image | img_url: 'large' }}');">
            <div class="carousel-content rich-text__inner">
              <span class="inline-badge" style="--badge-bg: {{ block.settings.color_bg }};--badge-text: {{ block.settings.color_text }}">{{ block.settings.tile_title }}</span>
              <p class="subheading" style="color: {{ block.settings.text_color }}; font-size: {{ block.settings.text_size }}px;">{{ block.settings.tile_description }}</p>
              <div class="carousel-buttons">
                <a href="{{ block.settings.learn_more_link }}" class="button" style="color: {{ section.settings.button_text_color }};">
                  {{ block.settings.learn_more_text }}
                </a>
                <a href="{{ block.settings.get_started_link }}" class="button button--secondary" style="color: {{ section.settings.button_text_color }};">
                  {{ block.settings.get_started_text }}
                </a>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.carousel-container {
  overflow: hidden;
}

.carousel {
  display: flex;
  gap: 20px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
}

.carousel-item {
  flex: 0 0 auto;
  border-radius: 15px;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  position: relative;
}

.carousel-content {
  width: 100%;
  text-align: center;
  padding: 20px;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
}

.carousel-buttons {
  margin-top: 20px;
  display: flex;
  justify-content: center;
  gap: 10px;
}

.carousel-buttons .button {
  padding: 10px 20px;
  font-weight: 600;
  text-transform: uppercase;
  cursor: pointer;
  border: none;
  border-radius: 50px;
}

.button--secondary {
  background-color: transparent;
  border: 1px solid #333;
}

</style>



{% schema %}
{
  "name": "Custom Carousel",
  "settings": [
    {
      "type": "number",
      "id": "item_height",
      "label": "Item Height (px)",
      "default": 675
 

    },
    {
      "type": "number",
      "id": "item_width",
      "label": "Item Width (px)",
      "default":510,
  

    },
    {
      "type": "text",
      "id": "padding",
      "label": "Carousel Padding",
      "default": "40px"
    },
    {
      "type": "text",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "carousel_item",
      "name": "Carousel Item",
      "settings": [
        {
          "type": "text",
          "id": "tile_title",
          "label": "Tile Title",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "tile_description",
          "label": "Tile Description",
          "default": "Description goes here."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image Alt Text",
          "default": "Image description"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#ffffff"
        },
        {
          "type": "range",
          "id": "text_size",
          "label": "Text Size (px)",
          "default": 16,
          "min": 12,
          "max": 36,
          "unit": "px"
        },
        {
          "type": "url",
          "id": "learn_more_link",
          "label": "Learn More Link",
          "default": "/"
        },
        {
          "type": "text",
          "id": "learn_more_text",
          "label": "Learn More Text",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "get_started_link",
          "label": "Get Started Link",
          "default": "/"
        },
        {
          "type": "text",
          "id": "get_started_text",
          "label": "Get Started Text",
          "default": "Get started"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Carousel Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

